# مثال على ملف متغيرات البيئة
# انسخ هذا الملف إلى .env وعدّل القيم حسب الحاجة

# إعدادات التطبيق
VITE_APP_NAME="نظام إدارة التلاميذ"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="نظام شامل لإدارة التلاميذ والمستويات والأقسام"

# إعدادات قاعدة البيانات
VITE_DB_NAME="student_management"
VITE_DB_VERSION="1"

# إعدادات الشبكة
VITE_HOST="0.0.0.0"
VITE_PORT="5173"

# إعدادات الأمان
VITE_ENABLE_DEBUG="false"
VITE_ENABLE_CONSOLE_LOGS="false"

# إعدادات الاستيراد
VITE_MAX_FILE_SIZE="10485760"  # 10MB
VITE_SUPPORTED_FORMATS="xlsx,xls"

# إعدادات الطباعة
VITE_DEFAULT_PAPER_SIZE="A4"
VITE_DEFAULT_ORIENTATION="portrait"

# إعدادات الروائز
VITE_MAX_QUESTIONS="100"
VITE_DEFAULT_QUESTIONS="20"
VITE_SCAN_CONFIDENCE_THRESHOLD="70"

# إعدادات التخزين
VITE_STORAGE_QUOTA="100MB"
VITE_BACKUP_RETENTION_DAYS="30"

# إعدادات المؤسسة الافتراضية
VITE_DEFAULT_ACADEMY="الأكاديمية الجهوية للتربية والتكوين"
VITE_DEFAULT_DIRECTORATE="المديرية الإقليمية"
VITE_DEFAULT_MUNICIPALITY="الجماعة"
VITE_DEFAULT_INSTITUTION="المؤسسة التعليمية"
VITE_DEFAULT_ACADEMIC_YEAR="2025/2026"

# إعدادات اللغة والتوطين
VITE_DEFAULT_LANGUAGE="ar"
VITE_DEFAULT_DIRECTION="rtl"
VITE_DEFAULT_FONT="Cairo"

# إعدادات الأداء
VITE_CHUNK_SIZE="1000"
VITE_LAZY_LOADING="true"
VITE_CACHE_ENABLED="true"

# إعدادات التطوير
VITE_HOT_RELOAD="true"
VITE_SOURCE_MAPS="true"
VITE_MINIFY="true"

# ملاحظات:
# - لا تضع كلمات مرور أو مفاتيح سرية في هذا الملف
# - جميع المتغيرات يجب أن تبدأ بـ VITE_
# - القيم النصية يجب أن تكون بين علامتي اقتباس
# - القيم الرقمية والمنطقية بدون علامات اقتباس